x = 40
base = 440
deslocamento = fontSize * .25

for letter in texto:
    
    #for path in p.contours:
    #    drawpath(path)
    #    stroke(random(0.5))

    x = x + p.bounds.w + 3
    if letter == ' ':
        x += fontSize * .35
    if letter == 'e':
        base -= deslocamento
    if letter == 'o':
        base += deslocamento
    if letter == 'a':
        base += deslocamento
    if letter == 'i':
        base -= deslocamento

    p = textpath(letter, x, base)
    drawpath(p)



    if letter == "\r":
        base += deslocamento * 10
        x = 40
